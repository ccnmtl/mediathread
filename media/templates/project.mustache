                                    Respond to Assignment
                                </button>
                            {{/context.my_response}}
                        {{/context.my_responses.length}}
                    {{/is_faculty}}
                {{/context.project.is_essay_assignment}}

                {{#context.my_response}}
                    {{^context.viewing_my_response}}
                        <button class="project project-my-response btn btn-outline-secondary btn-sm"
